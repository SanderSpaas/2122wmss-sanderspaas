{% extends "alela.twig" %}
{% block content %} 
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="page-title">
                <div class="title_left">
                    <h3>Add a company</h3>
                </div>

                <div class="title_right">

                </div>
            </div>

            <div class="">
                <div class="clearfix"></div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br/>
                            <form class="form-horizontal form-label-left" method="post">

                                <div class="form-group row ">
                                    <label class="control-label col-md-3 col-sm-3 ">Company name</label>
                                    <div class="col-md-9 col-sm-9 ">
                                        <input type="text" class="form-control" name="name" placeholder="">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3 ">VAT Number </label>
                                    <div class="col-md-9 col-sm-9 ">
                                        <input type="text" class="form-control" name="vat_number">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3 ">Street & housenumber </label>
                                    <div class="col-md-9 col-sm-9 ">
                                        <input type="text" class="form-control" name="address">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3 ">Postal code & city </label>
                                    <div class="col-md-3 col-sm-3 ">
                                        <input type="text" class="form-control" name="zip">
                                    </div>
                                    <div class="col-md-6 col-sm-6 ">
                                        <input type="text" class="form-control" name="city">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3 ">Primary contact </label>
                                    <div class="col-md-9 col-sm-9 ">
                                        <input type="text" class="form-control" name="primary_contact_name">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3 ">Primary contact - Email</label>
                                    <div class="col-md-9 col-sm-9 ">
                                        <input type="text" class="form-control" name="primary_contact_email">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3 ">Primary contact - Phone</label>
                                    <div class="col-md-9 col-sm-9 ">
                                        <input type="text" class="form-control" name="primary_contact_phone">
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-9 col-sm-9  offset-md-3">
                                        <button type="reset" class="btn btn-outline-primary">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /page content -->
{% endblock %}
   